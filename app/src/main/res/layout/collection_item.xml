<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/tie_zi_item_bg"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">
        <TextView
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="46px"
            android:layout_marginRight="46px"
            android:layout_marginTop="70px"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:lineSpacingExtra="24px"
            android:maxLines="2"
            android:text="天猫超市全聚德烤鸭"
            android:textColor="@color/black"
            android:textSize="44px"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60px"
            android:layout_marginTop="30px"
            android:layout_marginLeft="46px"
            android:layout_marginRight="46px"
            android:layout_marginBottom="50px"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/creator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="agdagfd"
                android:textColor="@color/hot_item_name"
                android:textSize="36px"/>

            <TextView
                android:id="@+id/publish_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="38px"
                android:text="1\u5206\u949f\u524d"
                android:textColor="@color/hot_item_time_view_comment"
                android:textSize="36px"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

            <ImageView
                android:id="@+id/iv_comment"
                android:layout_width="42px"
                android:layout_height="36px"
                android:layout_marginLeft="46px"
                android:src="@drawable/post_num_icon"
                app:layout_auto_baseheight="width"/>

            <TextView
                android:id="@+id/comment_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10px"
                android:text="999+"
                android:textColor="@color/hot_item_time_view_comment"
                android:textSize="30px"/>


        </LinearLayout>

        <include
            layout="@layout/list_divider_line"/>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_cancel"
        android:layout_width="160px"
        android:layout_height="match_parent"
        android:visibility="visible">

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="120px"
            android:layout_height="65px"
            android:layout_centerInParent="true"
            android:text="删除"
            android:textSize="36px"
            android:textColor="@color/white"
            android:background="@drawable/collection_cancel_btn"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">
            <include
                layout="@layout/list_divider_line"/>
        </LinearLayout>

    </RelativeLayout>



</com.zhy.autolayout.AutoLinearLayout>